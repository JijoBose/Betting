<p id="notice"><%= notice %></p>

<h1>Payouts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Match</th>
      <th>Amount</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payouts.each do |payout| %>
      <tr>
        <td><%= payout.user_id %></td>
        <td><%= payout.match_id %></td>
        <td><%= payout.amount %></td>
        <td><%= payout.txn %></td>
        <td><%= link_to 'Show', payout %></td>
        <td><%= link_to 'Edit', edit_payout_path(payout) %></td>
        <td><%= link_to 'Destroy', payout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

