
<%= simple_form_for(@payout) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :match_id %>
    <%= f.input :amount %>
    <%= f.input :txn %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
