
<%= simple_form_for(@team_match) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :team_id, :collection => Team.all.pluck(:id, :name),
      label_method: :second, value_method: :first, prompt: "Select Team", class: "custom-select" %>
    <%= f.input :match_id, :collection => Match.all.pluck(:id, :venue),
          label_method: :second, value_method: :first, prompt: "Select Match", class: "custom-select" %>
    <%= f.input :score %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
