<p id="notice"><%= notice %></p>

<p>
  <strong>Match:</strong>
  <%= @event.match_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time %>
</p>

<p>
  <strong>Commission:</strong>
  <%= @event.commission %>
</p>

<p>
  <strong>Status:</strong>
  <%= @event.status %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>


<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Amount</th>
      <th>Amount won</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event.bets.each do |bet| %>
      <tr>
        <td><%= bet.user_id %></td>
        <td><%= bet.amount %></td>
        <td><%= bet.user.payouts.first.try(:amount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

