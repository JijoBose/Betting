
<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :match_id, :collection => Match.all.pluck(:id, :venue),
      label_method: :second, value_method: :first, prompt: "Select Match", class: "custom-select" %>
    <%= f.input :title %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :commission %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
