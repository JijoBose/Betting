<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Match</th>
      <th>Title</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Commission</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.match_id %></td>
        <td><%= event.title %></td>
        <td><%= event.start_time.strftime("%m/%d/%Y at %I:%M%p") %></td>
        <td><%= event.end_time.strftime("%m/%d/%Y at %I:%M%p") %></td>
        <td><%= event.commission %></td>
        <td><%= event.status %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

